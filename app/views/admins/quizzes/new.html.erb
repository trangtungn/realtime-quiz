<div class="container mx-auto px-4 py-8">
  <div class="mt-8">
    <%= link_to "Back to quizzes", admins_quizzes_path, class: "text-blue-600 hover:text-blue-800 font-medium transition-colors duration-200 ease-in-out" %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 mb-8">New quiz</h1>

  <div class="min-h-[80vh] flex items-center justify-center">
    <div class="w-full max-w-md">
      <div class="bg-white shadow-md rounded-lg">
        <div class="px-6 py-8">
          <%= render "form", quiz: @quiz %>
        </div>
      </div>

      <div class="mt-4">
        <%= render partial: 'layouts/flash_errors' %>
      </div>
    </div>
  </div>
</div>
