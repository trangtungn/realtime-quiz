<div id="<%= dom_id quiz %>" class="bg-white rounded-lg shadow hover:shadow-md transition-shadow duration-300 mb-4">
  <div class="p-6">
    <h5 class="text-xl font-semibold text-gray-900 mb-2"><%= quiz.title %></h5>
    <p class="text-gray-600 mb-4"><%= quiz.description %></p>
    <%= link_to "Show this quiz",
        quiz_path(quiz.token),
        class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
  </div>
</div>
