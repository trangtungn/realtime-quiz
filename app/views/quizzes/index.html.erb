<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <%= render "shared/alerts" %>

  <div class="flex justify-between items-center mb-6">
    <% if current_user %>
      <h1 class="text-lg font-medium text-gray-700">Hello <%= current_user.name || current_user.email %>!</h1>
    <% end %>

    <h1 class="text-3xl font-bold text-gray-900">Quizzes</h1>

    <%# Add a new quiz button if you have one %>
    <%= link_to "New Quiz", new_admins_quiz_path,
        class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" if current_user&.admin? %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @quizzes.each do |quiz| %>
      <%= render quiz %>
    <% end %>
  </div>
</div>
